{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Nox Energy API Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "get-started/introduction",
              "get-started/get-started"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/authentication"
            ]
          },
          {
            "group": "API Endpoints",
            "openapi": {
              "source": "api-reference/openapi.json",
              "directory": "api-reference"
          }
          }
        ]
      },
      {
        "tab": "Changelog",
        "groups": [
          {
            "group": "Changelog",
            "pages": [
              "changelog/product-updates"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://www.nox.energy/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/no_background_1280w.svg",
    "dark": "/logo/no_background_1280w.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@nox.energy"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.nox.energy/"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/energy-nox"
    }
  }
}